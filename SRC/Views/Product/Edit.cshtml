@model MaChiPhuShoe.Models.Product

@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<h1>@ViewData["Title"]</h1>
<hr />
<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="OldPrice"></label>
                <input asp-for="OldPrice" class="form-control" />
                <span asp-validation-for="OldPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductState"></label>
                <input asp-for="ProductState" class="form-control" />
                <span asp-validation-for="ProductState" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StockStatus"></label>
                <input asp-for="StockStatus" class="form-control" />
                <span asp-validation-for="StockStatus" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Warranty"></label>
                <input asp-for="Warranty" class="form-control" />
                <span asp-validation-for="Warranty" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="form-label">Danh mục</label>
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-select"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Size"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Cập nhật" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-warning ms-1">Quay lại danh sách</a>
    </div>

</form>
