@model MaChiPhuShoe.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="bg-white p-4 rounded shadow-sm">
    <div class="row">
        <div class="col-lg-5">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-lg-7">
            <h3><span class="text-success fw-bold">[@Model.ProductState]</span> @Model.Name</h3>
            <div class="d-flex align-items-baseline mt-3">
                <span class="h2 text-danger fw-bold me-3">@Model.Price.ToString("N0") đ</span>
                @if (Model.OldPrice.HasValue)
                {
                    <span class="text-muted text-decoration-line-through">@Model.OldPrice.Value.ToString("N0") đ</span>
                }
            </div>
            <hr>
            <ul class="list-unstyled product-specs">
                <li><i class="fas fa-check-circle text-success"></i><strong>Kho: </strong><span class="fw-bold text-success">@Model.StockStatus</span></li>
                <li><i class="fa-solid fa-palette"></i><strong>Màu sắc: </strong> @Model.Color</li>
                <li><i class="fa-solid fa-up-right-and-down-left-from-center"></i><strong>Kích thước: </strong> @Model.Size</li>
                <li><i class="fa-solid fa-circle-info"></i><strong>Mô tả: </strong> @Model.Description</li>
                <li><i class="fas fa-shield-alt"></i><strong>Bảo hành: </strong> @Model.Warranty</li>
            </ul>
            <div class="d-grid gap-2 mt-4">
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.Id" class="btn btn-danger btn-lg">
    <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .product-specs li {
            padding: 8px 0;
            border-bottom: 1px solid #f0f0f0;
        }

            .product-specs li i {
                width: 20px;
                text-align: center;
                margin-right: 10px;
                color: #555;
            }
    </style>
}
