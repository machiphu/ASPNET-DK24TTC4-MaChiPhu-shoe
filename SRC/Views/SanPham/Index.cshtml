@model IEnumerable<MaChiPhuShoe.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0 text-white">Danh sách sản phẩm</h2>

        <form class="d-flex" asp-controller="SanPham" asp-action="Index" method="get" style="max-width:360px;">
            <input class="form-control me-2" type="search" name="q" value="@ViewBag.Keyword"
                   placeholder="Tìm kiếm...">
            <button class="btn btn-outline-danger" type="submit">Tìm</button>
        </form>
    </div>

    <div class="row g-4">
        @foreach (var p in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                <div class="card shadow-sm h-100 product-card">
                    <a asp-controller="SanPham" asp-action="Details" asp-route-id="@p.Id">
                        <img src="@(!string.IsNullOrWhiteSpace(p.ImageUrl) ? p.ImageUrl : Url.Content("~/images/no-image.png"))"
                             class="card-img-top" alt="@p.Name"
                             style="height:200px;object-fit:contain;padding:10px;">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title mb-2">
                            <a class="text-decoration-none text-dark"
                               asp-controller="SanPham" asp-action="Details" asp-route-id="@p.Id">
                                @p.Name
                            </a>
                        </h6>

                        <ul class="list-unstyled text-muted small mb-3">
                            <li><strong>Màu sắc:</strong> @p.Color</li>
                            <li><strong>Kích thước:</strong> @p.Size</li>
                            <li><strong>Mô tả:</strong> @p.Description</li>
                        </ul>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="h6 text-danger fw-bold mb-0">@p.Price.ToString("N0") đ</span>
                            <div>
                                <a class="btn btn-outline-danger btn-sm"
                                   asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@p.Id"
                                   title="Thêm vào giỏ">
                                    <i class="fas fa-cart-plus"></i>
                                </a>
                                <a class="btn btn-danger btn-sm"
                                   asp-controller="SanPham" asp-action="Details" asp-route-id="@p.Id">
                                    Chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-card {
        transition: transform .2s ease-in-out;
    }

    .product-card:hover {
        transform: translateY(-5px);
    }

    .card {
        background-color: #f2f2f2 !important;
    }
</style>
