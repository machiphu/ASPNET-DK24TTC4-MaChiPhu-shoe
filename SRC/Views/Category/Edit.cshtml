@model MaChiPhuShoe.Models.Category
@{
    ViewData["Title"] = "Sửa danh mục";
}
<h3>@ViewData["Title"]</h3>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên danh mục</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-warning ms-1">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
