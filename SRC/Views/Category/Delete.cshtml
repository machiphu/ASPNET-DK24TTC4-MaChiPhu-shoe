@model MaChiPhuShoe.Models.Category
@{
    ViewData["Title"] = "Xoá danh mục";
    var count = (int)(ViewBag.ProductCount ?? 0);
}
<h3>@ViewData["Title"]</h3>

<div class="alert @(count > 0 ? "alert-warning" : "alert-danger")">
    <p>Bạn có chắc muốn xoá danh mục: <strong>@Model.Name</strong> (ID: @Model.Id)?</p>
    @if (count > 0)
    {
        <p>Danh mục này đang có <strong>@count</strong> sản phẩm.</p>
        <p>Chọn <strong>“Chuyển sản phẩm sang Không phân loại”</strong> để xoá an toàn.</p>
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    @if (count > 0)
    {
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="reassign" name="reassign" value="true" />
            <label class="form-check-label" for="reassign">Chuyển sản phẩm sang “Không phân loại” rồi xoá</label>
        </div>
    }
    <button class="btn btn-danger">Xoá</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
