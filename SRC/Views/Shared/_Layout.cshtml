<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MaChiPhu-Shoe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MaChiPhuShoe.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    MaChiPhuShoe.com
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <!-- Left menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                         <li class="nav-item me-1">
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active fw-bold" : "")"
           asp-controller="Home" asp-action="Index">Trang chủ</a>
    </li>
    <li class="nav-item me-3">
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "GioiThieu" ? "active fw-bold" : "")"
           asp-controller="Home" asp-action="GioiThieu">Giới thiệu</a>
    </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-list me-1"></i>Danh mục
                            </a>
                            @await Component.InvokeAsync("CategoryMenu")
                        </li>


                        @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link active dropdown-toggle" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-gear me-1"></i>Quản trị hệ thống
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Báo cáo Thống kê</a></li>
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Quản lý Sản phẩm</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="OrderList">Quản lý Đơn hàng</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Quản lý User</a></li>
                                    <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">Quản lý Danh mục</a></li>

                                </ul>
                            </li>
                        }
                    </ul>



                    <!-- Search -->
                    <form class="d-flex mx-auto" asp-controller="Home" asp-action="Search" method="get" style="width: 400px;">
                        <input class="form-control me-2 bg-dark text-white border-light text-placeholder" type="search"
                               placeholder="Tìm kiếm..." aria-label="Search" name="query">
                        <button class="btn btn-outline-light" type="submit">Tìm</button>
                    </form>

                    <!-- Right: Login + Cart -->
                    <div class="ms-auto d-flex align-items-center">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i> Giỏ hàng
                                    @if (ViewBag.CartCount is int c && c > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @c
                                            <span class="visually-hidden">sản phẩm trong giỏ</span>
                                        </span>
                                    }
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white mt-5">
        <div class="container py-4">
            <div class="row g-4">
                <div class="col-md-5">
                    <h5 class="mb-3">MaChiPhuShoe.com</h5>
                    <p class="mb-2">
                        Cung cấp giày dép chính hãng, mẫu mã đa dạng, giá tốt nhất.<br />
                        Luôn có combo ưu đãi & dịch vụ hậu mãi chu đáo.
                    </p>
                    <div class="d-flex gap-3 fs-5">
                        <a class="text-white" href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                        <a class="text-white" href="#" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
                        <a class="text-white" href="#" aria-label="Zalo"><i class="fa-solid fa-phone"></i></a>
                    </div>
                </div>

                <div class="col-md-3">
                    <h6 class="mb-3">Liên kết nhanh</h6>
                    <ul class="list-unstyled">
                        <li><a class="text-white text-decoration-none" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li><a class="text-white text-decoration-none" asp-controller="Home" asp-action="GioiThieu">Giới thiệu</a></li>
                        <li><a class="text-white text-decoration-none" asp-controller="SanPham" asp-action="Index">Sản phẩm</a></li>
                        <li><a class="text-white text-decoration-none" asp-controller="Cart" asp-action="Index">Giỏ hàng</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h6 class="mb-3">Liên hệ</h6>
                    <p class="mb-1"><i class="fa-solid fa-phone me-2"></i>Hotline: <strong>035 212 9582</strong></p>
                    <p class="mb-1"><i class="fa-solid fa-location-dot me-2"></i>Address: 1051/24B Hậu Giang, P. Bình Phú, TP. HCM</p>
                    <p class="mb-0"><i class="fa-solid fa-envelope me-2"></i>Email: support@MaChiPhuShoe.com</p>
                </div>
            </div>

            <hr class="border-secondary" />
            <div class="text-center small">
                &copy; @DateTime.Now.Year - MaChiPhuShoe.com. All rights reserved.
            </div>
        </div>
    </footer>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- CSS tùy chỉnh -->
    <style>
        .bg-dark{
            background-color: #dc3545 !important;
        }

        .text-placeholder::placeholder{
            color:white !important;
        }
    </style>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
